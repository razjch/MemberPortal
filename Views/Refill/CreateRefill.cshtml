@model MemberPortal.Models.RefillOrder

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateRefill</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="drugheader">
        @Html.Partial("_partialHeader")
    </div>
    <div class="container">
        <h4>RefillOrder</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RefillOrderID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RefillOrderID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SubscriptionID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubscriptionID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RefillDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RefillDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DueRefillTimes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DueRefillTimes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DrugId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DrugId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DuePrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DuePrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RefilStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RefilStatus)
            </dd>

            <hr />
            <form class="form-inline" action="/Refill/GetRefillDueStatus" method="post">
                <div class="form-group mb-2">
                    <input type="number" class="form-control" name="Id" placeholder="Enter Subscription Id" required>
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    Date:<input type="date" class="form-control" name="Date" required>
                    
                </div>
                <button type="submit" class="btn btn-primary mb-2">Check Refill Due Status</button>
            </form>

        </dl>

        <br>
        <br>
        <br>
        <dt class="col-sm-2">
            <a style="background-color: lightgray; text-align: center;" class="nav-link text-dark " asp-area="" asp-controller="Refill" asp-action="GetAllSubscription">Back To List</a>
        </dt>
    </div>
    <div class="drugfooter">
        @Html.Partial("_partialFooter")
    </div>
</body>
<script>
    if ('@ViewBag.MessageRefill'!='')
        alert('@ViewBag.MessageRefill');
    
</script>
</html>
